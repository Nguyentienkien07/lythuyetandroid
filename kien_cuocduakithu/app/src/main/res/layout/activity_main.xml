<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/backgroud"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <CheckBox
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkbox3"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp" />

    <CheckBox
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkbox2" />

    <SeekBar
        android:id="@+id/seekbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/checkbox3"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/totodile2" />

    <SeekBar

        android:id="@+id/seekbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekbar3"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/checkbox2"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/lapras2" />

    <SeekBar
        android:id="@+id/seekbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar2"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/checkbox1"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/squirtle" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/animalcrossing" />

    <TextView
        android:id="@+id/textviewDiemSo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="100"
        android:textColor="#ECAD0E"
        android:textSize="50sp" />

    <ImageButton
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:src="@drawable/playyy" />

</RelativeLayout>
